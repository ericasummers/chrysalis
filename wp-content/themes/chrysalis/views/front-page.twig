{% extends "base.twig" %}
{% block content %}
	<main class="main">
		<div class="book-blurb">
			{{function('apply_filters', 'the_content', fields.post.post_content)}}
		</div>
		<div class="hero owl-carousel owl-theme" id="hero-carousel">
			{% for slide in fields.home_carousel_slider %}
				<div class="slide-content" style="background-image: url({{slide.background_image}});">
					<div class="slide-container">
						{{slide.slide_content}}
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="content">
			{% if fields.author_promo %}
				<div class="promo">
					<img src="/wp-content/uploads/2020/05/dad-profile.jpg" alt="Peter Wright looking at camera with ocean behind" />
					<p>{{fields.author_promo}}</p>
				</div>
			{% endif %}
			{% if fields.reviews %}
				<div class="reviews">
					<h2>See what others had to say</h2>
					<div class="review-blocks owl-carousel owl-theme" id="reviews-carousel">
						{% for review in fields.reviews %}
							<div class="review">
								<i class="fas fa-quote-left"></i>
								<p>{{review.quote}}</p>
								<i class="fas fa-quote-right"></i>
								<p class="author">{{review.author}}</p>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endif %}
		</div>
	</main>

{% endblock %}
